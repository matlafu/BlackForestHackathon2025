# API Keys
OPENWEATHERMAPAPI_API_KEY=your_openweathermap_api_key_here
ENTSOECLIENT_API_KEY=your_entsoe_api_key_here
OPENGRIDMAPCLIENT_API_KEY=your_opengridmap_api_key_here

# Location Settings (Default: Berlin, Germany)
DEFAULT_LATITUDE=52.520008
DEFAULT_LONGITUDE=13.404954
DEFAULT_COUNTRY_CODE=DE

# API Client Settings
API_TIMEOUT=30  # Request timeout in seconds
API_CACHE_TTL=300  # Cache time-to-live in seconds (5 minutes)
WEATHER_CACHE_TTL=900  # Weather cache TTL (15 minutes)

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="{time} | {level} | {message}"

